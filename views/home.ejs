<script>
   
    $('#HomeLogin').click(function(){
       $('#buttons').toggleClass('buttonsClicked');
       $('#showSupplier').addClass('supplierClicked');
       $('#showEmployee').addClass('employeeClicked');
       $('#contactMenu').addClass('clickedContact');
       
    });
    
    $('#supplier').click(function(){
        $('#buttons').addClass('buttonsClicked');
        $('#showSupplier').removeClass('supplierClicked')
        
    });
    
    $('#employee').click(function(){
        $('#buttons').addClass('buttonsClicked');
        $('#showEmployee').removeClass('employeeClicked')
        
    });
    //var user = $('input[name ='type']').attr('value');
    
     $('#contactUs').click(function(){
       $('#contactMenu').toggleClass('clickedContact');
       $('#buttons').addClass('buttonsClicked');
       $('#showSupplier').addClass('supplierClicked');
       $('#showEmployee').addClass('employeeClicked');
       
       //alert("clicked");
    });
    
   
    
</script>
        
       
        
        

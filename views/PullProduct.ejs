<% include ./partials/header %>
<p>hello world</p>
<div class="ui main text container segment">
    <div class="ui huge header">New Product </div>
    <form class="ui form action" action="/suppliers/products/pull" method="POST">
        
        
        <div class="category">
            <label>category</label>
            <select required name="product[category]" > 
                <option value ="Laptop">Laptop</option>
                <option value="TV">TV</option>
                <option value="Smartphones">Smartphones</option>
            </select>
        </div>

        <div class="name">
                <label>name</label>
            <select required name="product[name]" >
                
                  <%  $(".category").on("click" , "option",function(){ %>
                      <% let selected = $(this).val( ) ; %>
                  <%  }); %>
            
                <% names.forEach( function(element){ %>
                 <option> <% if (element.category === selected) { %>
                     <%= element.name } %>
                 </option>
                <%  }); %>
                
            </select>
        </div>




        <div class="field">
            <label>quantity</label>
            <input required type="text" placeholder="quantity" name="product[quantity]">
        </div>

        

        <input type="submit" class="ui violet basic button">


    </form>


</div>



<% include ./partials/footer %>
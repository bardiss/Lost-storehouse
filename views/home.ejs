    <body>
        
        <div class="ui fixed inverted menu">
            <div class="ui container">
                <div class="header item"><i class="truck inverted icon"></i> warehouse Site</div>
                <a href="/" class="item">Home</a>
                <a href="#" class="item" id="contactUs">Contact Us</a>
                
                <div class="right menu ">
                        <a id="HomeLogin"  class="item" >Login</a>
                </div>
            </div>
        </div>
     <div id = "buttons" class="buttonsClicked ui text segment">
         <button class="ui button orange" id = "supplier">supplier</button>
         <button class="ui button orange" id = "employee">employee</button>
     </div>   
        
    <div class="ui  text  segment supplierClicked" id="showSupplier">
        
        <form class="ui form action " action="/suppliers/login" method="POST">
        
        <div class="field">
            <label>UserName</label>
            <input required type="text" placeholder="UserName" name="username">
        </div>

        <div class="field">
            <label>Password</label>
            <input required type="password" placeholder="Password" name="password">
        </div>
        
                
        

    
    <br>
        <div class="field">
        <button  class="ui orange fluid button">Login</button>
        </div>

    </form>
    </div>
    
    
     <div class="ui  text  segment employeeClicked" id="showEmployee">
        
        <form class="ui form action " action="products/login" method="POST">
        
        <div class="field">
            <label>UserName</label>
            <input required type="text" placeholder="UserName" name="username">
        </div>

        <div class="field">
            <label>Password</label>
            <input required type="password" placeholder="Password" name="password">
        </div>
        
                
        
    
    <br>
        <div class="field">
        <button  class="ui orange fluid button">Login</button>
        </div>

    </form>
    </div>
    
  <div class="clickedContact" id="contactMenu">  
    <div class="ui text segment compact vertical labeled icon menu " >
      <a class="item" target="_blank" href="https://www.facebook.com/profile.php?id=100019489390800">
        <i class="ui circular facebook icon button"></i>
        
      </a>
      <a class="item" href="https://www.linkedin.com/">
        <i class="ui circular linkedin icon button"></i>
        
      </a>
      <a class="item" href="https://www.google.com/">
        <i class="ui circular google plus icon button"></i>
        
      </a>
    </div>
  </div>       
       
      
